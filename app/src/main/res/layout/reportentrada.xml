<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">



    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/acopiocard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <TextView
            android:id="@+id/textviewpatenteentrega"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text=">Patente:"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:layout_gravity="center"/>

        <AutoCompleteTextView
            android:id="@+id/patentesreporteentrada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:inputType="textPersonName"
            android:drawableLeft="@drawable/ic_local_shipping_black_24dp"
            android:hint="Escriba patente"
            android:completionThreshold="1"
            android:textColor="#000" />


        <TextView
            android:id="@+id/textviewm3entrega"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">Cantidad M3:"
            android:textColor="#000"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/txtm3entrada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="50dp"
                android:inputType="number"
                android:drawableLeft="@drawable/ic_filter_3_black_24dp"
                android:drawablePadding="10dp"
                android:ems="10"
                android:hint="Ingrese los M3" />
        </android.support.design.widget.TextInputLayout>



    <TextView
        android:id="@+id/textviewmobsentrada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">Nombre del conductor:"
        android:textColor="#000"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textStyle="bold"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txtnchofer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="50dp"
                    android:drawableLeft="@drawable/ic_person_outline_black_24dp"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:hint="Nombre del chofer"
                    android:inputType="textPersonName"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btnregistroentrada"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="155dp"
            android:layout_height="35dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center"
            android:background="@drawable/btnredondo"
            android:gravity="center"
            android:text="REGISTRAR ENTRADA" />


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>

