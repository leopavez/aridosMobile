<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/resumenpatentecard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textviewpatenteentrega"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text=">Patente:"
                android:textColor="#000"
                android:layout_marginTop="20dp"
                android:textStyle="bold"
                android:layout_marginLeft="140dp"/>

            <AutoCompleteTextView
                android:id="@+id/patentesResumenAcopio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:inputType="textPersonName"
                android:drawableLeft="@drawable/ic_local_shipping_black_24dp"
                android:hint="Escriba patente"
                android:completionThreshold="1"
                android:textColor="#000" />



            <Button
                android:id="@+id/btnresumenxpatenteacopio"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="155dp"
                android:layout_height="35dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btnredondo"
                android:gravity="center"
                android:text="RESUMEN" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/resumencardacopio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/btnresumendiarioacopio"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="155dp"
            android:layout_height="35dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/btnredondo"
            android:gravity="center"
            android:text="RESUMEN DIARIO" />


    </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>